<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <div class="card mt-3">
        <div class="card-header">
            <h2>Novo Artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <label for="title">Título</label>
                <input type="text" id="title" name="title" placeholder="Defina o título do artigo." class="form-control mb-3">
                <label for="category">Categoria</label>
                <select name="category" class="form-control mb-3" id="category">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <label for="article">Artigo</label>
                <textarea name="body" id="article" class="form-control" placeholder="Escreva aqui o seu artigo."></textarea>
                <button class="btn btn-primary mt-3">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>